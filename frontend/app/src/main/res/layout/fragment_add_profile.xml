<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.AddProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/addProfileImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/addProfileNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName" />

        <RadioButton
            android:id="@+id/addProfilePrivateRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="공개 프로필" />

        <Button
            android:id="@+id/addProfileUploadImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이미지 업로드" />

        <Button
            android:id="@+id/addProfileSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로필 생성" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>